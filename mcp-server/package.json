{
  "name": "@docs-hound/mcp-server",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest run"
  },
  "dependencies": {
    "@docs-hound/tool-docs-search": "workspace:*",
    "@docs-hound/shared-db": "workspace:*"
  },
  "devDependencies": {
    "tsx": "^4.19.2"
  }
}
