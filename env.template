# ============================================================================
# IMPORTANT: Copy this file to apps/web/.env.local (not in root!)
#
# This is a monorepo, and the Next.js app is in apps/web/
# Next.js looks for .env.local in the same directory as the app
#
# Command: cp env.template apps/web/.env.local
# ============================================================================

# OpenAI - Required for embeddings and chat
OPENAI_API_KEY=

# Upstash Vector - Single index for all docs
# Vercel integration provides these exact names
UPSTASH_VECTOR_REST_URL=
UPSTASH_VECTOR_REST_TOKEN=

# Upstash Redis - Site registry and metadata
# Vercel integration provides: KV_REST_API_URL, KV_REST_API_TOKEN
# For local development, use these legacy names
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# QStash - For batch crawling (optional)
# Vercel integration provides: QSTASH_URL, QSTASH_TOKEN, signing keys
QSTASH_TOKEN=

# Security - Optional
CRON_SECRET=
MCP_API_KEY=
